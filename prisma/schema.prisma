generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// esquema de la base de datos nuevo
enum Gender {
  MASCULINO
  FEMENINO
  UNISEX
}

// nueva tabla
enum AdminRole {
  ADMIN
  SUPER_ADMIN
}

enum PerfumeCategory {
  ONE_ONE   @map("1.1")
  PREPARADO @map("preparado")
}

model AdminUser {
  id           Int       @id
  name         String    @db.VarChar(120)
  username     String    @unique @db.VarChar(60)
  email        String    @unique @db.VarChar(190)
  passwordHash String    @db.VarChar(255)
  image        String?   @db.VarChar(500)
  role         AdminRole @default(ADMIN) // conexion con la tabla roles

  perfumes Perfume[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(120)

  perfumes Perfume[]

  @@map("brands")
}

model Perfume {
  id           BigInt @id @default(autoincrement())
  ownerAdminId Int
  brandId      Int

  name        String          @db.VarChar(160)
  gender      Gender
  category    PerfumeCategory @default(ONE_ONE)
  description String          @db.VarChar(500)
  imageUrl    String          @db.VarChar(500)

  isAvailable Boolean @default(true)

  ownerAdmin AdminUser @relation(fields: [ownerAdminId], references: [id], onUpdate: Cascade)
  brand      Brand     @relation(fields: [brandId], references: [id], onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerAdminId])
  @@index([brandId])
  @@map("perfumes")
}

model PerfumeCategoryInfo {
  category    PerfumeCategory @id
  title       String          @db.VarChar(60)
  description String          @db.VarChar(500)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("perfume_category_info")
}
